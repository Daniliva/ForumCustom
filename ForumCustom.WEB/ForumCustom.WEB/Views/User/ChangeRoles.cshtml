@model ForumCustom.WEB.Domain.Models.UserRoleModel

@{
    ViewData["Title"] = "ChangeRoles";
}

<h4>Change Roles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ChangeRoles">

            @using (Html.BeginForm())
            {
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserId)
                        @Html.HiddenFor(x => x.UserId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Login)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Login)
                        @Html.HiddenFor(x => x.Login)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Roles)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Roles)
                        @Html.HiddenFor(x => x.Roles)
                        @Html.HiddenFor(x => x.ModifyTime)
                    </dd>
                </dl>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @for (int i = 0; i < Model.SelectedSubjects.Count; i++)
                {
                    <div>
                        <input type="checkbox" name="SelectedSubjects" value="@Model.SelectedSubjects[i]" />
                        <a href="ur-url">@Model.SelectedSubjects[i]</a>
                    </div>

                }<div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>

            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}